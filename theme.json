				"bottom": "0",
				"left": "2rem",
				"right": "2rem"
			}
		}, 
        "color": {
            "text": "#FFFFFF", 
            "background": "#000"
        }, 
        "elements": {
            "h1":{
                "typography": {
                    "fontFamily": "hypatia",
                    "textDecoration": "italic"
                }
            },
            "h2":{
                "typography": {
                    "fontFamily": "hypatia",
                    "fontWeight": "Regular"
                }
            },
            "h3":{
                "typography": {
                    "fontFamily": "hypatia",
                    "fontWeight": "Light"

                }
            },
            "textInput":{
                "typography": {
                    "fontFamily": "primary"
                }
            },
            "button": {
                "color": {
                    "text": "gold", 
                    "background": "black"
                },
                
                "border": {
                    "radius": "6px", 
                    "color": "gold", 
                    "style": "solid", 
                    "width": "1px"
                },
                ":hover": {
                    "color": {
                        "background": "white",
                        "text": "black"
                    },
                    "border": {
                        "radius": "6px", 
                        "color": "white"
                    }
                }
            }, 
            "link":{
                "color": {
                    "text": "var(--mint)"
                },
                ":hover": {
                    "color": {
                        "text": "var(--raspberry)"
                    }
                }, 
                ":visited":{
                    "color": {
                        "text": "var(--dark-mint)"
                    }
                }
            }
        },
