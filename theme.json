                    "bottom": {
                        "color": "white", 
                        "style": "solid", 
                        "width": "1px"
                    }
                }, 
                "typography": {
                    "fontFamily": "hypatia", 
                    "textAlign": "center", 
                    "lineHeight": "2"
                }, 
                "elements": {
                    "link": {
                        "color": {
                            "background": "black",
                            "text": "white"
                        },
                        "border": {
                                "radius": "6px"
                        }, 
                        ":hover": {
                            "color": {
                                "background": "var(--dark-gold)", 
                                "text": "white"
                            }, 
                            "border": {
                                "radius": "6px"
                            }
                        },
                        "spacing": {
                            "padding": {
                                "bottom": "10px", 
                                "top": "10px", 
                                "left": "10px", 
                                "right": "10px"
